<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Customers</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            color: #333;
            font-family: Arial, sans-serif;
            font-size: 14px;
            text-align: left;
            
        }

        th {
            background-color: #4285f4;
            color: #fff;
            font-weight: bold;
            padding: 10px;
            text-transform: uppercase;
        }

        th:first-child {
            border-top-left-radius: 5px;
        }

        th:last-child {
            border-top-right-radius: 5px;
        }

        td,
        th {
            border: 1px solid #ccc;
            padding: 10px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e2e2e2;
        }
    </style>
</head>

<body>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for (let cust of customer) { %>
                <tr>
                    <td><%= cust.name %></td>
                    <td><%= cust.email %></td>
                    <td><%= cust.dob %></td>
                    <td><%= cust.phone %></td>
                    <td>
                        <form action="/delete-customer" method="POST">
                            <input type="hidden" value="<%= cust.id %>" name="userId">
                            <button class="col2 btn" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</body>

</html>